<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_main_textView_app_name"
        android:theme="@style/Base.Theme.PlaylistMaker.WhiteAndBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="start"
        android:text="@string/app_name"
        android:textSize="@dimen/_22sp" />

    <Button
        android:id="@+id/activity_main_button_search"
        style="@style/button_activity_main"
        android:text="@string/search"
        app:cornerRadius="@dimen/_16dp"
        app:icon="@drawable/magnifier" />

    <Button
        android:id="@+id/activity_main_button_library"
        style="@style/button_activity_main"
        android:text="@string/media_library"
        app:cornerRadius="@dimen/_16dp"
        app:icon="@drawable/media_library"/>

    <Button
        android:id="@+id/activity_main_button_settings"
        style="@style/button_activity_main"
        android:text="@string/settings"
        app:cornerRadius="@dimen/_16dp"
        app:icon="@drawable/settings" />


</LinearLayout>
