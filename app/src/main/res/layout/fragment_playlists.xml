<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <Button
        android:id="@+id/button_new_playlists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/new_playlists"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:paddingHorizontal="@dimen/_14dp"
        android:minHeight="36dp"
        android:textAllCaps="false"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/iconColorWhiteBlack"
        android:background="@drawable/rounded_background_54dp"
        app:backgroundTint="@null"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:paddingTop="@dimen/_8dp"
        android:paddingHorizontal="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_tracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_havent_created_any_playlists"
        android:layout_marginTop="46dp"
        android:drawablePadding="@dimen/_16dp"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/iconColorBlackWhite"
        android:gravity="center_horizontal"
        app:drawableTopCompat="@drawable/no_tracks" />
</androidx.appcompat.widget.LinearLayoutCompat>
