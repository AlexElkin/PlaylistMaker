<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_textView_activity_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/_16dp</item>
        <item name="android:padding">@dimen/settings_padding_20</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="style_button_activity_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:theme">@style/Widget.MaterialComponents.Button.UnelevatedButton</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:minWidth">@dimen/_320dp</item>
    </style>

    <style name="style_toolBar_textView">
        <item name="android:text">@string/settings</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="style_toolBar_button_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/iconColorWhiteBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:src">@drawable/vector</item>
    </style>

    <style name="style_track_view_arrow" parent="style_toolBar_button_back">
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginVertical">@dimen/_18dp</item>
        <item name="android:layout_marginRight">@dimen/_18dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:src">@drawable/arrow</item>
    </style>

    <style name="style_track_view_logo" parent="style_track_view_arrow">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginVertical">@dimen/_8dp</item>
        <item name="android:layout_marginLeft">@dimen/_14dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:src">@drawable/defaul_logo</item>
    </style>

    <style name="style_track_view_logo2" parent="style_track_view_arrow">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingVertical">@dimen/_8dp</item>
        <item name="android:layout_marginLeft">@dimen/_12dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:src">@drawable/defaul_logo</item>
    </style>


    <style name="style_activity_search_textView_16sp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="style_activity_search_textView_12sp" parent="style_activity_search_textView_16sp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/iconColorGrayWhite</item>
    </style>

    <style name="SwitchView">
        <item name="android:thumbTint">@color/switch_thumb_color</item>
        <item name="android:trackTint">@color/switch_track_color</item>
    </style>

    <style name="AudioPlayer_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AudioPlayer_TextView_End" parent="AudioPlayer_TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <style name="NoHighlightBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="android:selectableItemBackground">@null</item>
    </style>
    <style name="ShapeAppearance.MyApp.BottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
</resources>