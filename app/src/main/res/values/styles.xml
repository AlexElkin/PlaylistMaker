<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textView_activity_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/_16dp</item>
        <item name="android:padding">@dimen/settings_padding_20</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="button_activity_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:theme">@style/Widget.MaterialComponents.Button.UnelevatedButton</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:minWidth">@dimen/_320dp</item>
    </style>
    <style name="toolBar_textView">
        <item name="android:text">@string/settings</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="toolBar_button_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/iconColorWhiteBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:src">@drawable/vector</item>
    </style>
</resources>